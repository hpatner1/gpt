{
  "name": "hassan/spot-trading-risk-manager",
  "type": "project",
  "description": "Hassan Spot Trading Risk Manager - Laravel 12 + Livewire risk dashboard",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^12.0",
    "livewire/livewire": "^3.0"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "laravel/pint": "^1.13",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
